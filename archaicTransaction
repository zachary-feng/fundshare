package spreadsheet;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.mysql.jdbc.PreparedStatement;
import com.mysql.jdbc.Statement;

public class MySqlRetrieve {
	public static void connection() {
		try {
			Class.forName("com.mysql.jdbc.Driver");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	public static double getBalance(String name) {
		connection();
		double balance = 0;
		String host = "jdbc:mysql://localhost/user";
		String username = "root";
		String password = "";
		try {
			Connection connect = DriverManager.getConnection(host, username, password);
			PreparedStatement statement = (PreparedStatement) connect.prepareStatement("SELECT balance FROM userinstances WHERE name = ?");
			statement.setString(1, name);
			ResultSet data = statement.executeQuery();
			while(data.next()) {
				balance = data.getDouble("balance");
			}
			statement.close();
			connect.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return balance;
	}
	
	public static void payUser(String payee, double amount) {
		connection();
		String host = "jdbc:mysql://localhost/user";
		String username = "root";
		String password = "";
		try {
			Connection connect = DriverManager.getConnection(host, username, password);
			PreparedStatement statement = (PreparedStatement) connect.prepareStatement("UPDATE userinstances SET balance = balance + ? WHERE name = ?");
			statement.setDouble(1, amount);
			statement.setString(2, payee);
			statement.executeUpdate();
			statement.close();
			connect.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
	public static void deductBalance(String payer, double amount) {
		connection();
		String host = "jdbc:mysql://localhost/user";
		String username = "root";
		String password = "";
		try {
			Connection connect = DriverManager.getConnection(host, username, password);
			PreparedStatement statement = (PreparedStatement) connect.prepareStatement("UPDATE userinstances SET balance = balance - ? WHERE name = ?");
			statement.setDouble(1, amount);
			statement.setString(2, payer);
			statement.executeUpdate();
			statement.close();
			connect.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
	public static void makePayment(String payer, String payee, double amount) {
		MySqlRetrieve.payUser(payee, amount);
		MySqlRetrieve.deductBalance(payer, amount);
		try {
			Connection connect = DriverManager.getConnection(host, username, password);
			PreparedStatement statement = (PreparedStatement) connect.prepareStatement("INSERT INTO " +payer +"transactionhistory(payer, payee, amount)VALUES(?,?,?)");
			statement.setString(1, payer);
			statement.setString(2, payee);
			statement.setDouble(3, amount);
			statement.executeUpdate();
			statement.close();
			PreparedStatement xyz = (PreparedStatement) connect.prepareStatement("INSERT INTO " +payee +"transactionhistory(payer, payee, amount)VALUES(?,?,?)");
			xyz.setString(1, payer);
			xyz.setString(2, payee);
			xyz.setDouble(3, amount);
			xyz.executeUpdate();
			connect.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
	public static void main (String[] args) {
//		System.out.println(MySqlRetrieve.getBalance("lazer"));
//		System.out.println(MySqlRetrieve.getBalance("deif"));
//		MySqlRetrieve.makePayment("lazer", "deif", 20);
//		System.out.println(MySqlRetrieve.getBalance("lazer"));
//		System.out.println(MySqlRetrieve.getBalance("deif"));
	}
}
